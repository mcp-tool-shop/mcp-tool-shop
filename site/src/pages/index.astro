---
import Base from '../layouts/Base.astro';
import projects from '../data/projects.json';
import collections from '../data/collections.json';
import releases from '../data/releases.json';
import stats from '../data/org-stats.json';

const projectsByRepo = new Map((projects as any[]).map((p: any) => [p.repo, p]));
const featured = (projects as any[]).filter((p: any) => p.featured);
const recentReleases = (releases as any[]).slice(0, 5);

function relativeDate(iso: string) {
  if (!iso) return '';
  const diff = Date.now() - new Date(iso).getTime();
  const days = Math.floor(diff / 86400000);
  if (days === 0) return 'today';
  if (days === 1) return 'yesterday';
  if (days < 30) return `${days}d ago`;
  const months = Math.floor(days / 30);
  return months === 1 ? '1mo ago' : `${months}mo ago`;
}
---

<Base title="mcp-tool-shop" currentPath="/">
  <section class="hero">
    <h1>MCP Tool Shop</h1>
    <p class="tagline">
      Weekly spotlights on MCP tools that actually help.
    </p>
    <p class="subhead">
      Short, honest picks for people building agent workflows &mdash; clear install steps, real tradeoffs, and a link to verify anything we claim.
    </p>
    <div class="cta-group">
      <a href="/tools/" class="btn btn-primary">Browse tools</a>
      <a href="/now/" class="btn btn-secondary">This Week's Spotlight</a>
    </div>
    <p class="trust-footnote">
      Prefer vibes? Cool. Prefer receipts? Also cool. <a href="/trust/">See how verification works &rarr;</a>
    </p>
    <div class="proof-points">
      <div class="proof-point">
        <span class="number">{stats.repoCount}</span>
        <span class="label">public repos</span>
      </div>
      <div class="proof-point">
        <span class="number">100%</span>
        <span class="label">local-first</span>
      </div>
      <div class="proof-point">
        <span class="number">MCP</span>
        <span class="label">native</span>
      </div>
      <div class="proof-point">
        <span class="number">Weekly</span>
        <span class="label">spotlights</span>
      </div>
    </div>
  </section>

  {recentReleases.length > 0 && (
    <section class="recent-releases">
      <div class="recent-header">
        <h2 class="section-heading">Recently shipped</h2>
        <a href="/releases/" class="see-all">All releases</a>
      </div>
      <div class="release-strip">
        {recentReleases.map((rel: any) => (
          <a href={`/tools/${rel.repo}/`} class="release-chip">
            <span class="release-chip-name">{rel.toolName}</span>
            <span class="release-chip-tag">{rel.tag}</span>
            <span class="release-chip-date">{relativeDate(rel.publishedAt)}</span>
          </a>
        ))}
      </div>
    </section>
  )}

  <section>
    <h2 class="section-heading">In the spotlight</h2>
    <p class="section-subheading">Tools selected this week.</p>
    <div class="project-grid">
      {featured.map((project: any) => (
        <div class="project-card">
          <div class="card-header-home">
            <h3>
              <a href={`/tools/${project.repo}/`}>
                {project.name}
              </a>
            </h3>
            {project.stability && (
              <span class={`badge badge-${project.stability}`}>{project.stability}</span>
            )}
          </div>
          <p>{project.tagline || project.description}</p>
          {project.install && (
            <code class="install-line">{project.install}</code>
          )}
          <div class="card-meta">
            {project.stars > 0 && <span class="meta-item">{project.stars} stars</span>}
            {project.language && <span class="meta-item">{project.language}</span>}
          </div>
          <div class="tags">
            {project.tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  {(collections as any[]).map((collection: any) => {
    const items = collection.repos
      .map((repo: string) => projectsByRepo.get(repo))
      .filter(Boolean);
    if (items.length === 0) return null;
    return (
      <section class="collection-section">
        <h2 class="section-heading">{collection.title}</h2>
        <p class="section-subheading">{collection.description}</p>
        <div class="collection-grid">
          {items.map((project: any) => (
            <a href={`/tools/${project.repo}/`} class="collection-item">
              <span class="collection-item-name">{project.name}</span>
              <span class="collection-item-desc">{project.tagline || project.description}</span>
            </a>
          ))}
        </div>
      </section>
    );
  })}
</Base>

<style>
  .subhead {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0.25rem 0 0;
    max-width: 540px;
  }

  .trust-footnote {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin: 0.75rem 0 0;
  }

  .trust-footnote a {
    color: var(--color-text-muted);
    text-decoration: none;
  }

  .trust-footnote a:hover {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .recent-releases {
    margin: 2rem 0 3rem;
  }

  .recent-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .see-all {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  .see-all:hover {
    color: var(--color-accent);
  }

  .release-strip {
    display: flex;
    gap: 0.75rem;
    overflow-x: auto;
    padding-bottom: 0.5rem;
  }

  .release-chip {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.875rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    text-decoration: none;
    white-space: nowrap;
    transition: border-color 0.15s;
    flex-shrink: 0;
  }

  .release-chip:hover {
    border-color: var(--color-accent);
    text-decoration: none;
  }

  .release-chip-name {
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--color-accent);
  }

  .release-chip-tag {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--color-text);
    background: var(--color-bg);
    padding: 0.1em 0.4em;
    border-radius: 3px;
  }

  .release-chip-date {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    color: var(--color-text-muted);
  }

  .card-header-home {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .card-header-home h3 {
    margin: 0;
  }

  .badge {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    padding: 0.125em 0.5em;
    border-radius: 3px;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .badge-stable {
    color: var(--color-success);
    background: rgba(63, 185, 80, 0.1);
  }

  .badge-beta {
    color: #d29922;
    background: rgba(210, 153, 34, 0.1);
  }

  .badge-experimental {
    color: #f85149;
    background: rgba(248, 81, 73, 0.1);
  }

  .install-line {
    display: block;
    margin: 0.5rem 0;
    padding: 0.375rem 0.625rem;
    font-size: 0.75rem;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 3px;
    overflow-x: auto;
    white-space: nowrap;
  }

  .collection-section {
    margin-top: 3rem;
  }

  .collection-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .collection-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0.875rem 1rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    text-decoration: none;
    transition: border-color 0.15s;
  }

  .collection-item:hover {
    border-color: var(--color-accent);
    text-decoration: none;
  }

  .collection-item-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-accent);
  }

  .collection-item-desc {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
</style>
