---
import Base from "../../../layouts/Base.astro";
import fs from "node:fs";
import path from "node:path";

const title = "Decision Drift";
const description = "Week-over-week changes in promotion decisions â€” drift detection and audit trail.";

// Load decision-drift.json
let drift: any = null;
const driftPath = path.join(process.cwd(), "src/data/decision-drift.json");
try {
  if (fs.existsSync(driftPath)) {
    drift = JSON.parse(fs.readFileSync(driftPath, "utf8"));
  }
} catch { /* fail soft */ }

const entrants = drift?.entrants || [];
const exits = drift?.exits || [];
const scoreDeltas = drift?.scoreDeltas || [];
const reasonChanges = drift?.reasonChanges || [];
const summary = drift?.summary || { totalChanged: 0, totalStable: 0 };
const generatedAt = drift?.generatedAt
  ? new Date(drift.generatedAt).toISOString().slice(0, 10)
  : null;

// Filter to only meaningful score deltas (delta !== 0)
const meaningfulDeltas = scoreDeltas.filter((d: any) => d.delta !== 0);
---

<Base
  title={title}
  description={description}
  currentPath="/lab/drift/"
>
  <head>
    <meta name="robots" content="noindex, nofollow" />
  </head>

  <div class="drift-page">
    <span class="internal-badge">Internal</span>

    <h1>Decision Drift</h1>
    <p class="subtitle">Week-over-week changes in promotion decisions.</p>

    {!drift ? (
      <div class="empty-state">
        <p>No drift data available.</p>
        <p>Run <code>node scripts/gen-decision-drift.mjs</code> after at least two pipeline runs.</p>
      </div>
    ) : (
      <>
        {/* Summary banner */}
        <div class="summary-banner">
          <div class="stat">
            <span class="stat-value">{summary.totalChanged}</span>
            <span class="stat-label">Changed</span>
          </div>
          <div class="stat">
            <span class="stat-value entrant-color">{entrants.length}</span>
            <span class="stat-label">Entrants</span>
          </div>
          <div class="stat">
            <span class="stat-value exit-color">{exits.length}</span>
            <span class="stat-label">Exits</span>
          </div>
          <div class="stat">
            <span class="stat-value">{summary.totalStable}</span>
            <span class="stat-label">Stable</span>
          </div>
        </div>

        {summary.totalChanged === 0 && (
          <div class="no-drift">
            <p>No drift detected &mdash; decisions are stable since last run.</p>
          </div>
        )}

        {/* Entrants */}
        {entrants.length > 0 && (
          <>
            <h2>New Entrants</h2>
            <ul class="slug-list">
              {entrants.map((slug: string) => (
                <li class="mono">{slug}</li>
              ))}
            </ul>
          </>
        )}

        {/* Exits */}
        {exits.length > 0 && (
          <>
            <h2>Exits</h2>
            <ul class="slug-list exit-list">
              {exits.map((slug: string) => (
                <li class="mono">{slug}</li>
              ))}
            </ul>
          </>
        )}

        {/* Score deltas */}
        {meaningfulDeltas.length > 0 && (
          <>
            <h2>Score Changes</h2>
            <div class="table-wrap">
              <table>
                <thead>
                  <tr>
                    <th>Slug</th>
                    <th class="num-header">Previous</th>
                    <th class="num-header">Current</th>
                    <th class="num-header">Delta</th>
                  </tr>
                </thead>
                <tbody>
                  {meaningfulDeltas.map((d: any) => (
                    <tr>
                      <td class="mono">{d.slug}</td>
                      <td class="num">{d.prevScore}</td>
                      <td class="num">{d.currScore}</td>
                      <td class={`num ${d.delta > 0 ? 'delta-up' : 'delta-down'}`}>
                        {d.delta > 0 ? `+${d.delta}` : d.delta}
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </>
        )}

        {/* Action changes */}
        {reasonChanges.length > 0 && (
          <>
            <h2>Action Changes</h2>
            <div class="table-wrap">
              <table>
                <thead>
                  <tr>
                    <th>Slug</th>
                    <th>Previous Action</th>
                    <th>Current Action</th>
                  </tr>
                </thead>
                <tbody>
                  {reasonChanges.map((r: any) => (
                    <tr>
                      <td class="mono">{r.slug}</td>
                      <td><span class={`action-badge action-${r.prevAction}`}>{r.prevAction}</span></td>
                      <td><span class={`action-badge action-${r.currAction}`}>{r.currAction}</span></td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </>
        )}

        {generatedAt && (
          <p class="timestamp">Last computed: {generatedAt}</p>
        )}
      </>
    )}

    <div class="provenance">
      <h3>Data Sources</h3>
      <ul>
        <li>Drift: <code>site/src/data/decision-drift.json</code></li>
        <li>Snapshot: <code>site/src/data/decision-drift-snapshot.json</code></li>
        <li>Generator: <code>scripts/gen-decision-drift.mjs</code></li>
      </ul>
    </div>
  </div>
</Base>

<style>
  .drift-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .internal-badge {
    display: inline-block;
    background: #d29922;
    color: #000;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  h1 {
    margin: 0 0 0.25rem;
    font-size: 2rem;
    color: var(--color-text, #e6edf3);
  }

  h2 {
    font-size: 1.1rem;
    color: var(--color-text, #e6edf3);
    margin: 2rem 0 0.75rem;
  }

  .subtitle {
    color: var(--color-text-muted, #8b949e);
    margin: 0 0 1.5rem;
    font-size: 0.95rem;
  }

  .summary-banner {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 2rem;
    padding: 1rem;
    background: var(--color-surface, #161b22);
    border: 1px solid var(--color-border, #30363d);
    border-radius: 8px;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }

  .stat-value {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--color-text, #e6edf3);
    font-variant-numeric: tabular-nums;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--color-text-muted, #8b949e);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: 0.25rem;
  }

  .entrant-color { color: #3fb950; }
  .exit-color { color: #f85149; }

  .empty-state {
    text-align: center;
    padding: 3rem 1rem;
    color: var(--color-text-muted, #8b949e);
    font-size: 1.1rem;
    background: var(--color-surface, #161b22);
    border: 1px solid var(--color-border, #30363d);
    border-radius: 8px;
  }

  .no-drift {
    text-align: center;
    padding: 1.5rem 1rem;
    color: var(--color-text-muted, #8b949e);
    font-size: 0.95rem;
    background: var(--color-surface, #161b22);
    border: 1px solid var(--color-border, #30363d);
    border-radius: 8px;
  }

  .slug-list {
    padding-left: 1.2rem;
    margin: 0;
  }

  .slug-list li {
    margin: 0.3rem 0;
    font-size: 0.9rem;
    color: var(--color-text, #e6edf3);
  }

  .slug-list li::marker { color: #3fb950; }
  .exit-list li::marker { color: #f85149; }

  .table-wrap { overflow-x: auto; }

  table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.85rem;
  }

  th {
    text-align: left;
    padding: 0.5rem;
    border-bottom: 2px solid var(--color-border, #30363d);
    color: var(--color-text-muted, #8b949e);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .num-header { text-align: right; }

  td {
    padding: 0.5rem;
    border-bottom: 1px solid var(--color-border, #30363d);
    color: var(--color-text, #e6edf3);
  }

  .num {
    text-align: right;
    font-variant-numeric: tabular-nums;
  }

  .mono {
    font-family: monospace;
    font-size: 0.8rem;
  }

  .delta-up { color: #3fb950; }
  .delta-down { color: #f85149; }

  .action-badge {
    display: inline-block;
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .action-promote { background: rgba(63, 185, 80, 0.15); color: #3fb950; }
  .action-skip { background: rgba(139, 148, 158, 0.15); color: #8b949e; }
  .action-defer { background: rgba(210, 153, 34, 0.15); color: #d29922; }

  .timestamp {
    color: var(--color-text-muted, #8b949e);
    font-size: 0.8rem;
    margin-top: 2rem;
  }

  .provenance {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border, #30363d);
    color: var(--color-text-muted, #8b949e);
    font-size: 0.8rem;
  }

  .provenance h3 {
    font-size: 0.85rem;
    margin: 0 0 0.5rem;
    color: var(--color-text-muted, #8b949e);
  }

  .provenance ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .provenance li { margin: 0.3rem 0; }

  .provenance code {
    background: rgba(110, 118, 129, 0.2);
    padding: 0.1rem 0.35rem;
    border-radius: 3px;
    font-size: 0.8rem;
  }

  @media (max-width: 600px) {
    .summary-banner {
      flex-direction: column;
      gap: 0.75rem;
    }

    .stat {
      flex-direction: row;
      justify-content: space-between;
    }

    .stat-value { font-size: 1.3rem; }
    table { font-size: 0.8rem; }
  }
</style>
