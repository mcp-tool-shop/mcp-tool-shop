                  <div class="flex-1 min-w-0">
                    <span class="absolute inset-0" aria-hidden="true" />
                    <p class="text-lg font-medium text-white group-hover:text-indigo-400 transition-colors">
                      {tool.name}
                    </p>
                    <p class="text-sm text-gray-400 mt-1">
                      {tool.desc}
                    </p>
                  </div>
