---
import Base from "../../../layouts/Base.astro";
import fs from "node:fs";
import path from "node:path";

const title = "Pipeline Baseline";
const description = "NameOps pipeline baseline — performance stats, cost projection, risk items";

// Load baseline data
let baseline: any = null;
const baselinePath = path.join(process.cwd(), "src/data/baseline.json");
try {
  if (fs.existsSync(baselinePath)) {
    baseline = JSON.parse(fs.readFileSync(baselinePath, "utf8"));
  }
} catch { /* fail soft */ }

function formatDuration(ms: number) {
  if (ms < 1000) return `${ms}ms`;
  return `${Math.round(ms / 1000)}s`;
}
---

<Base
  title={title}
  description={description}
  currentPath="/lab/baseline/"
>
  <head>
    <meta name="robots" content="noindex, nofollow" />
  </head>

  <div class="baseline-page">
    <span class="internal-badge">Internal</span>

    <h1>Pipeline Baseline</h1>
    <p class="subtitle">Performance statistics, cost projection, and risk assessment.</p>

    {!baseline || baseline.runCount === 0 ? (
      <div class="empty-state">
        <p>No baseline data available.</p>
        <p>Run <code>node scripts/gen-baseline.mjs</code> after at least one pipeline run.</p>
      </div>
    ) : (
      <>
        {/* Summary banner */}
        <div class="summary-banner">
          <div class="stat">
            <span class="stat-value">{baseline.runCount}</span>
            <span class="stat-label">Runs</span>
          </div>
          <div class="stat">
            <span class="stat-value">{formatDuration(baseline.avgRuntimeMs)}</span>
            <span class="stat-label">Avg Duration</span>
          </div>
          <div class="stat">
            <span class="stat-value">{Math.round((baseline.avgCacheHitRate || 0) * 100)}%</span>
            <span class="stat-label">Avg Cache Rate</span>
          </div>
          <div class="stat">
            <span class="stat-value">${baseline.projection?.estimatedCost?.toFixed(3) || "0.000"}</span>
            <span class="stat-label">Monthly Cost</span>
          </div>
        </div>

        {/* Period */}
        {baseline.period && (
          <div class="period-info">
            <span class="period-dates">
              {baseline.period.start || "N/A"} &mdash; {baseline.period.end || "N/A"}
            </span>
            <span class="period-cadence">({baseline.period.cadence})</span>
          </div>
        )}

        {/* Performance details */}
        <h2>Performance</h2>
        <div class="table-wrap">
          <table>
            <tbody>
              <tr>
                <td>Average runtime</td>
                <td class="mono num">{formatDuration(baseline.avgRuntimeMs)}</td>
              </tr>
              <tr>
                <td>P95 runtime</td>
                <td class="mono num">{formatDuration(baseline.p95RuntimeMs)}</td>
              </tr>
              <tr>
                <td>Stddev runtime</td>
                <td class="mono num">{formatDuration(baseline.stddevRuntimeMs || 0)}</td>
              </tr>
              <tr>
                <td>Confidence</td>
                <td>
                  <span class={`confidence-badge confidence-${(baseline.confidenceLabel || "Low").toLowerCase()}`}>
                    {baseline.confidenceLabel || "Low"}
                  </span>
                </td>
              </tr>
              <tr>
                <td>Average cache hit rate</td>
                <td class="mono num">{Math.round((baseline.avgCacheHitRate || 0) * 100)}%</td>
              </tr>
              <tr>
                <td>Average minutes per run</td>
                <td class="mono num">{baseline.avgMinutesPerRun}</td>
              </tr>
              <tr>
                <td>Failure rate</td>
                <td class={`mono num ${(baseline.failureRate || 0) > 0.1 ? "error-rate" : ""}`}>
                  {Math.round((baseline.failureRate || 0) * 100)}%
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        {/* Adapter performance */}
        {baseline.adapterStats && Object.keys(baseline.adapterStats).length > 0 && (
          <>
            <h2>Adapter Performance</h2>
            <div class="table-wrap">
              <table>
                <thead>
                  <tr>
                    <th>Adapter</th>
                    <th class="num-header">Avg Calls</th>
                    <th class="num-header">Avg Cached</th>
                    <th class="num-header">Hit Rate</th>
                  </tr>
                </thead>
                <tbody>
                  {Object.entries(baseline.adapterStats)
                    .sort(([, a]: [string, any], [, b]: [string, any]) => b.avgCalls - a.avgCalls)
                    .map(([ns, stats]: [string, any]) => (
                      <tr>
                        <td class="mono">{ns}</td>
                        <td class="num">{stats.avgCalls}</td>
                        <td class="num">{stats.avgCached}</td>
                        <td class="num">{Math.round(stats.hitRate * 100)}%</td>
                      </tr>
                    ))}
                </tbody>
              </table>
            </div>
          </>
        )}

        {/* Risk items */}
        {baseline.projection?.riskItems?.length > 0 && (
          <>
            <h2>Risks</h2>
            <div class="risk-list">
              {baseline.projection.riskItems.map((risk: string) => (
                <div class="risk-item">
                  <span class="risk-icon">{"\u26a0\ufe0f"}</span>
                  <span class="risk-text">{risk}</span>
                </div>
              ))}
            </div>
          </>
        )}

        {/* Cost projection */}
        <h2>Cost Projection</h2>
        <div class="table-wrap">
          <table>
            <tbody>
              <tr>
                <td>Monthly run count</td>
                <td class="mono num">{baseline.projection?.monthlyRunCount || 4}</td>
              </tr>
              <tr>
                <td>Estimated minutes</td>
                <td class="mono num">{baseline.projection?.estimatedMinutes || 0}</td>
              </tr>
              <tr>
                <td>Estimated cost</td>
                <td class="mono num">${baseline.projection?.estimatedCost?.toFixed(3) || "0.000"}</td>
              </tr>
              <tr>
                <td>Runner rate</td>
                <td class="mono num">$0.006/min (ubuntu-latest)</td>
              </tr>
            </tbody>
          </table>
        </div>

        {/* Schedule presets */}
        {baseline.schedulePresets && (
          <>
            <h2>Schedule Presets</h2>
            <div class="table-wrap">
              <table>
                <thead>
                  <tr>
                    <th>Preset</th>
                    <th class="num-header">Cadence</th>
                    <th class="num-header">Monthly Runs</th>
                    <th class="num-header">Est. Minutes</th>
                    <th class="num-header">Est. Cost</th>
                  </tr>
                </thead>
                <tbody>
                  {Object.entries(baseline.schedulePresets).map(([name, preset]: [string, any]) => (
                    <tr class={preset.cadence === baseline.period?.cadence ? "preset-current" : ""}>
                      <td class="preset-name">{name.charAt(0).toUpperCase() + name.slice(1)}</td>
                      <td class="mono num">{preset.cadence}</td>
                      <td class="mono num">{preset.monthlyRuns}</td>
                      <td class="mono num">{preset.estimatedMinutes}</td>
                      <td class="mono num">${preset.estimatedCost?.toFixed(3) || "0.000"}</td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </>
        )}

        {/* Recommended cadence */}
        <h2>Recommended Cadence</h2>
        <p class="cadence-note">
          {baseline.projection?.estimatedCost < 0.50
            ? "Current weekly cadence is sustainable. Monthly cost is well within budget."
            : baseline.projection?.estimatedCost < 2.00
              ? "Weekly cadence is acceptable but monitor costs if name count increases."
              : "Consider biweekly cadence to reduce costs. Current projection exceeds $2/month."}
        </p>

        {/* Minute budgets */}
        {baseline.minuteBudgets && (
          <>
            <h2>Minutes Budget Reality Check</h2>
            <p class="section-note">How far can each monthly minutes budget stretch?</p>
            <div class="table-wrap">
              <table>
                <thead>
                  <tr>
                    <th>Budget (min/mo)</th>
                    <th class="num-header">Max Runs</th>
                    <th class="num-header">Recommended</th>
                    <th class="num-header">Headroom</th>
                  </tr>
                </thead>
                <tbody>
                  {[200, 500, 1000].map((tier) => {
                    const mb = baseline.minuteBudgets[tier];
                    return mb ? (
                      <tr>
                        <td class="mono">{tier} min</td>
                        <td class="num">{mb.maxRunsPerMonth}</td>
                        <td class="num">{mb.recommendedPreset.charAt(0).toUpperCase() + mb.recommendedPreset.slice(1)}</td>
                        <td class="num">{mb.headroom} min</td>
                      </tr>
                    ) : null;
                  })}
                </tbody>
              </table>
            </div>

            {/* What stops */}
            {(() => {
              const tightest = baseline.minuteBudgets[200];
              if (!tightest) return null;
              if (tightest.whatStops.length === 0) {
                return (
                  <div class="all-nominal">
                    <span class="nominal-icon">{"\u2705"}</span>
                    <span>All systems nominal — all schedule presets fit within 200 min/month.</span>
                  </div>
                );
              }
              return (
                <>
                  <h2>What Stops If Minutes Ran Out?</h2>
                  <p class="section-note">At the tightest budget (200 min/month):</p>
                  <div class="risk-list">
                    {tightest.whatStops.map((item: string) => (
                      <div class="risk-item">
                        <span class="risk-icon">{"\u26a0\ufe0f"}</span>
                        <span class="risk-text">{item}</span>
                      </div>
                    ))}
                  </div>
                </>
              );
            })()}
          </>
        )}
      </>
    )}

    <div class="provenance">
      <h3>Data Sources</h3>
      <ul>
        <li>Baseline: <code>site/src/data/baseline.json</code></li>
        <li>History: <code>site/src/data/ops-history.json</code></li>
        <li>Generator: <code>scripts/gen-baseline.mjs</code></li>
      </ul>
    </div>
  </div>
</Base>

<style>
  .baseline-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .internal-badge {
    display: inline-block;
    background: #d29922;
    color: #000;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  h1 {
    margin: 0 0 0.25rem;
    font-size: 2rem;
    color: var(--color-text, #e6edf3);
  }

  h2 {
    font-size: 1.1rem;
    color: var(--color-text, #e6edf3);
    margin: 2rem 0 0.75rem;
  }

  .subtitle {
    color: var(--color-text-muted, #8b949e);
    margin: 0 0 1.5rem;
    font-size: 0.95rem;
  }

  .summary-banner {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1rem;
    padding: 1rem;
    background: var(--color-surface, #161b22);
    border: 1px solid var(--color-border, #30363d);
    border-radius: 8px;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }

  .stat-value {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--color-text, #e6edf3);
    font-variant-numeric: tabular-nums;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--color-text-muted, #8b949e);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: 0.25rem;
  }

  .period-info {
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 0.8rem;
    color: var(--color-text-muted, #8b949e);
  }

  .period-dates {
    font-family: monospace;
  }

  .period-cadence {
    margin-left: 0.5rem;
  }

  .empty-state {
    text-align: center;
    padding: 3rem 1rem;
    color: var(--color-text-muted, #8b949e);
    font-size: 1.1rem;
    background: var(--color-surface, #161b22);
    border: 1px solid var(--color-border, #30363d);
    border-radius: 8px;
  }

  .empty-state code {
    background: rgba(110, 118, 129, 0.2);
    padding: 0.1rem 0.35rem;
    border-radius: 3px;
    font-size: 0.9rem;
  }

  .table-wrap { overflow-x: auto; }

  table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.85rem;
  }

  th {
    text-align: left;
    padding: 0.5rem;
    border-bottom: 2px solid var(--color-border, #30363d);
    color: var(--color-text-muted, #8b949e);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .num-header { text-align: right; }

  td {
    padding: 0.5rem;
    border-bottom: 1px solid var(--color-border, #30363d);
    color: var(--color-text, #e6edf3);
  }

  .num {
    text-align: right;
    font-variant-numeric: tabular-nums;
  }

  .mono {
    font-family: monospace;
    font-size: 0.8rem;
  }

  .error-rate { color: #f85149; }

  /* Confidence badges */
  .confidence-badge {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .confidence-low {
    background: rgba(248, 81, 73, 0.15);
    color: #f85149;
  }

  .confidence-medium {
    background: rgba(210, 153, 34, 0.15);
    color: #d29922;
  }

  .confidence-high {
    background: rgba(63, 185, 80, 0.15);
    color: #3fb950;
  }

  /* Schedule presets */
  .preset-name {
    font-weight: 600;
  }

  .preset-current {
    background: rgba(56, 139, 253, 0.08);
  }

  /* Risk items */
  .risk-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .risk-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: rgba(210, 153, 34, 0.08);
    border-left: 3px solid #d29922;
    border-radius: 4px;
    font-size: 0.85rem;
    color: var(--color-text, #e6edf3);
  }

  .risk-icon { font-size: 0.9rem; }

  .section-note {
    font-size: 0.8rem;
    color: var(--color-text-muted, #8b949e);
    margin: 0 0 0.75rem;
  }

  .all-nominal {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: rgba(63, 185, 80, 0.08);
    border-left: 3px solid #3fb950;
    border-radius: 4px;
    font-size: 0.85rem;
    color: var(--color-text, #e6edf3);
    margin: 0.75rem 0;
  }

  .nominal-icon { font-size: 0.9rem; }

  .cadence-note {
    font-size: 0.9rem;
    color: var(--color-text, #e6edf3);
    line-height: 1.5;
    padding: 0.75rem 1rem;
    background: var(--color-surface, #161b22);
    border: 1px solid var(--color-border, #30363d);
    border-radius: 6px;
  }

  .provenance {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border, #30363d);
    color: var(--color-text-muted, #8b949e);
    font-size: 0.8rem;
  }

  .provenance h3 {
    font-size: 0.85rem;
    margin: 0 0 0.5rem;
    color: var(--color-text-muted, #8b949e);
  }

  .provenance ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .provenance li { margin: 0.3rem 0; }

  .provenance code {
    background: rgba(110, 118, 129, 0.2);
    padding: 0.1rem 0.35rem;
    border-radius: 3px;
    font-size: 0.8rem;
  }

  @media (max-width: 600px) {
    .summary-banner {
      flex-direction: column;
      gap: 0.75rem;
    }

    .stat {
      flex-direction: row;
      justify-content: space-between;
    }

    .stat-value { font-size: 1.3rem; }
    table { font-size: 0.8rem; }
  }
</style>
