---
import Base from '../layouts/Base.astro';
import overrides from '../data/overrides.json';
import projects from '../data/projects.json';
import releases from '../data/releases.json';

// Get entries needing review
const overrideEntries = Object.entries(overrides as Record<string, any>);
const needsReview = overrideEntries.filter(([_, v]) => v.needsHumanReview === true);
const graduated = overrideEntries.filter(([_, v]) => !v.needsHumanReview);

// Schema enums for validation hints
const VALID_KINDS = ['mcp-server', 'cli', 'library', 'plugin', 'desktop-app', 'vscode-extension', 'homebrew-tap', 'template', 'meta'];
const VALID_STABILITY = ['stable', 'beta', 'experimental'];
const VALID_CATEGORIES = ['mcp-core', 'voice', 'security', 'ml', 'infrastructure', 'desktop', 'devtools', 'web', 'games'];

// Field completeness check
const EXPECTED_FIELDS = ['kind', 'stability', 'category', 'tagline'];
const NICE_TO_HAVE = ['install', 'tags', 'goodFor', 'notFor'];

function getCompleteness(entry: any): { present: string[]; missing: string[]; optional: string[] } {
  const present = EXPECTED_FIELDS.filter(f => entry[f]);
  const missing = EXPECTED_FIELDS.filter(f => !entry[f]);
  const optional = NICE_TO_HAVE.filter(f => !entry[f]);
  return { present, missing, optional };
}

function getProject(repo: string) {
  return (projects as any[]).find((p: any) => p.repo === repo);
}

function getLatestRelease(repo: string) {
  return (releases as any[]).find((r: any) => r.repo === repo);
}

function isValidKind(kind: string) { return VALID_KINDS.includes(kind); }
function isValidStability(s: string) { return VALID_STABILITY.includes(s); }
function isValidCategory(c: string) { return VALID_CATEGORIES.includes(c); }
function isTaglineOk(t: string) { return t && t.length <= 90; }
---

<Base
  title="Override Review — mcp-tool-shop"
  description="Review draft overrides awaiting human approval."
  currentPath="/review/"
>
  <div class="review-page">
    <h1>Override Review</h1>
    <p class="review-subtitle">
      {needsReview.length > 0
        ? `${needsReview.length} entries awaiting review · ${graduated.length} graduated`
        : `All ${graduated.length} overrides are graduated. Nothing to review.`}
    </p>

    {needsReview.length > 0 && (
      <section class="review-section">
        <h2>Needs Review</h2>
        <p class="section-hint">
          These entries were auto-generated by the enrichment script.
          Review each field, then remove <code>needsHumanReview</code> in
          <code>overrides.json</code> to graduate.
        </p>

        <div class="review-cards">
          {needsReview.map(([repo, entry]) => {
            const project = getProject(repo);
            const release = getLatestRelease(repo);
            const comp = getCompleteness(entry);
            const taglineLen = (entry.tagline || '').length;

            return (
              <div class="review-card review-card--draft">
                <div class="review-card-header">
                  <h3>{project?.name || repo}</h3>
                  <span class="draft-badge">draft</span>
                </div>

                <div class="review-fields">
                  {/* kind */}
                  <div class={`field-row ${entry.kind ? (isValidKind(entry.kind) ? 'field-ok' : 'field-warn') : 'field-missing'}`}>
                    <span class="field-label">kind</span>
                    <span class="field-value">{entry.kind || '—'}</span>
                    {entry.kind && !isValidKind(entry.kind) && <span class="field-hint">invalid enum</span>}
                  </div>

                  {/* stability */}
                  <div class={`field-row ${entry.stability ? (isValidStability(entry.stability) ? 'field-ok' : 'field-warn') : 'field-missing'}`}>
                    <span class="field-label">stability</span>
                    <span class="field-value">{entry.stability || '—'}</span>
                  </div>

                  {/* category */}
                  <div class={`field-row ${entry.category ? (isValidCategory(entry.category) ? 'field-ok' : 'field-warn') : 'field-missing'}`}>
                    <span class="field-label">category</span>
                    <span class="field-value">{entry.category || '—'}</span>
                  </div>

                  {/* tagline */}
                  <div class={`field-row ${entry.tagline ? (isTaglineOk(entry.tagline) ? 'field-ok' : 'field-warn') : 'field-missing'}`}>
                    <span class="field-label">tagline</span>
                    <span class="field-value tagline-value">{entry.tagline || '—'}</span>
                    {entry.tagline && <span class="field-hint">{taglineLen}/90</span>}
                  </div>

                  {/* install */}
                  <div class={`field-row ${entry.install ? 'field-ok' : 'field-optional'}`}>
                    <span class="field-label">install</span>
                    <span class="field-value">
                      {entry.install ? <code>{entry.install}</code> : <em>none</em>}
                    </span>
                  </div>

                  {/* tags */}
                  <div class={`field-row ${entry.tags?.length ? 'field-ok' : 'field-optional'}`}>
                    <span class="field-label">tags</span>
                    <span class="field-value">
                      {entry.tags?.length
                        ? <span class="tag-list">{entry.tags.map((t: string) => <span class="tag">{t}</span>)}</span>
                        : <em>none</em>}
                    </span>
                    {entry.tags?.length > 6 && <span class="field-hint">max 6</span>}
                  </div>

                  {/* goodFor / notFor */}
                  <div class={`field-row ${entry.goodFor?.length ? 'field-ok' : 'field-optional'}`}>
                    <span class="field-label">goodFor</span>
                    <span class="field-value">{entry.goodFor?.length ? `${entry.goodFor.length} items` : <em>add manually</em>}</span>
                  </div>

                  <div class={`field-row ${entry.notFor?.length ? 'field-ok' : 'field-optional'}`}>
                    <span class="field-label">notFor</span>
                    <span class="field-value">{entry.notFor?.length ? `${entry.notFor.length} items` : <em>add manually</em>}</span>
                  </div>
                </div>

                {/* Completeness bar */}
                <div class="completeness">
                  <div class="completeness-bar">
                    <div class="completeness-fill" style={`width: ${(comp.present.length / EXPECTED_FIELDS.length) * 100}%`}></div>
                  </div>
                  <span class="completeness-label">
                    {comp.present.length}/{EXPECTED_FIELDS.length} required
                    {comp.optional.length > 0 && ` · ${comp.optional.length} optional missing`}
                  </span>
                </div>

                {/* Context: release info */}
                {release && (
                  <div class="release-context">
                    Latest: <code>{release.tag}</code> ({new Date(release.publishedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })})
                  </div>
                )}

                {/* Links */}
                <div class="review-links">
                  <a href={`https://github.com/mcp-tool-shop-org/${repo}`} target="_blank" rel="noopener">GitHub</a>
                  <a href={`/tools/${repo}/`}>Tool page</a>
                  {release && <a href={release.url} target="_blank" rel="noopener">Latest release</a>}
                </div>
              </div>
            );
          })}
        </div>
      </section>
    )}

    <section class="review-section">
      <h2>Graduated ({graduated.length})</h2>
      <p class="section-hint">
        These overrides have been reviewed and accepted as stable editorial content.
      </p>
      <div class="graduated-grid">
        {graduated.map(([repo, entry]) => {
          const project = getProject(repo);
          const comp = getCompleteness(entry);
          return (
            <div class="graduated-row">
              <a href={`/tools/${repo}/`} class="grad-name">{project?.name || repo}</a>
              <span class={`badge badge-${entry.stability || 'beta'}`}>{entry.stability || '?'}</span>
              <span class="badge badge-kind">{entry.kind || '?'}</span>
              <span class="grad-completeness">{comp.present.length + (entry.install ? 1 : 0) + (entry.goodFor?.length ? 1 : 0)}/{EXPECTED_FIELDS.length + 2}</span>
            </div>
          );
        })}
      </div>
    </section>

    <section class="review-section">
      <h2>Graduation Rule</h2>
      <div class="rule-box">
        <p>
          When you remove <code>needsHumanReview: true</code> from an entry in
          <code>overrides.json</code>, it becomes <strong>stable editorial content</strong>.
          The enrichment script will never overwrite its fields again.
        </p>
        <p>
          Graduated entries should have at minimum: <code>kind</code>, <code>stability</code>,
          <code>category</code>, and <code>tagline</code>. Adding <code>install</code>,
          <code>goodFor</code>, and <code>notFor</code> makes the tool page significantly richer.
        </p>
      </div>
    </section>
  </div>
</Base>

<style>
  .review-page h1 {
    font-size: 2rem;
    margin-bottom: 0.25rem;
  }
  .review-subtitle {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }
  .review-section {
    margin-bottom: 3rem;
  }
  .review-section h2 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }
  .section-hint {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }

  /* Review cards */
  .review-cards {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }
  .review-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    padding: 1.25rem;
  }
  .review-card--draft {
    border-left: 3px solid #d29922;
  }
  .review-card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }
  .review-card-header h3 {
    font-size: 1.125rem;
    margin: 0;
  }
  .draft-badge {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    background: rgba(210, 153, 34, 0.15);
    color: #d29922;
    padding: 0.15em 0.5em;
    border-radius: 3px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Field rows */
  .review-fields {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    margin-bottom: 1rem;
  }
  .field-row {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
    font-size: 0.875rem;
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
  }
  .field-label {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-text-muted);
    min-width: 5.5rem;
    flex-shrink: 0;
  }
  .field-value {
    flex: 1;
    min-width: 0;
  }
  .tagline-value {
    font-style: italic;
  }
  .field-hint {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--color-text-muted);
    flex-shrink: 0;
  }

  .field-ok { background: rgba(63, 185, 80, 0.06); }
  .field-warn { background: rgba(210, 153, 34, 0.1); }
  .field-missing { background: rgba(248, 81, 73, 0.08); }
  .field-optional { background: transparent; }

  .field-ok .field-label { color: var(--color-success); }
  .field-warn .field-label { color: #d29922; }
  .field-missing .field-label { color: #f85149; }

  .tag-list {
    display: inline-flex;
    gap: 0.375rem;
    flex-wrap: wrap;
  }

  /* Completeness */
  .completeness {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }
  .completeness-bar {
    flex: 1;
    max-width: 120px;
    height: 4px;
    background: var(--color-border);
    border-radius: 2px;
    overflow: hidden;
  }
  .completeness-fill {
    height: 100%;
    background: var(--color-success);
    border-radius: 2px;
    transition: width 0.3s;
  }
  .completeness-label {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--color-text-muted);
  }

  .release-context {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  /* Links */
  .review-links {
    display: flex;
    gap: 1rem;
    font-size: 0.8125rem;
  }
  .review-links a {
    color: var(--color-accent);
  }

  /* Graduated grid */
  .graduated-grid {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  .graduated-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    border-radius: var(--radius);
  }
  .graduated-row:hover {
    background: var(--color-surface);
  }
  .grad-name {
    flex: 1;
    min-width: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .grad-completeness {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--color-text-muted);
  }

  /* Rule box */
  .rule-box {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    padding: 1.25rem;
  }
  .rule-box p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }
  .rule-box p:last-child {
    margin-bottom: 0;
  }

  /* Badge styles (mirror existing) */
  .badge {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    padding: 0.15em 0.5em;
    border-radius: 3px;
    white-space: nowrap;
  }
  .badge-stable {
    background: rgba(63, 185, 80, 0.15);
    color: #3fb950;
  }
  .badge-beta {
    background: rgba(210, 153, 34, 0.15);
    color: #d29922;
  }
  .badge-experimental {
    background: rgba(248, 81, 73, 0.15);
    color: #f85149;
  }
  .badge-kind {
    background: var(--color-accent-subtle);
    color: var(--color-accent);
  }
</style>
