---
import registryMeta from '../data/registry/meta.json';
import { kit } from '../lib/kit';

interface Props {
  title: string;
  description?: string;
  currentPath?: string;
  ogImage?: string;
}

const {
  title,
  description = kit.site.description || 'Building the tools that AI agents use to get real work done.',
  currentPath = '',
  ogImage,
} = Astro.props;

const siteUrl = kit.site.url || 'https://mcptoolshop.com';
const canonicalUrl = new URL(currentPath || '/', siteUrl).href;
const ogImageUrl = ogImage ? new URL(ogImage, siteUrl).href : undefined;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/tools/', label: 'Tools' },
  { href: '/releases/', label: 'Releases' },
  { href: '/newsletter/', label: 'Newsletter' },
  { href: '/about/', label: 'About' },
  { href: '/support/', label: 'Support' },
];

// Registry meta for footer
const meta = registryMeta as any;
const schemaLabel = meta.schemaVersion ? `v${meta.schemaVersion}` : null;
const refLabel = meta.registryTag || meta.registryRef || null;
const syncDate = meta.lastSyncAt ? new Date(meta.lastSyncAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) : null;
const cleanupUrl = meta.cleanupIssueUrl || null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    {ogImageUrl && <meta property="og:image" content={ogImageUrl} />}
    <meta name="twitter:card" content={ogImageUrl ? 'summary_large_image' : 'summary'} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImageUrl && <meta name="twitter:image" content={ogImageUrl} />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="site-nav">
      <div class="container relative"> {/* Added relative for positioning */}
        <a href="/" class="logo">{kit.site.title || 'mcp-tool-shop'}</a>
        <ul class="nav-links">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                aria-current={currentPath === link.href ? 'page' : undefined}
              >
                {link.label}
              </a>
            </li>
          ))}
          {/* Admin Nav Injection Point */}
          <li id="admin-nav-item" style="display: none;">
            <a href="/lab/" style="color: #a78bfa; font-weight: 600;">Lab âš¡</a>
          </li>
        </ul>
      </div>
    </nav>

    <main>
      <div class="container">
        <slot />
      </div>
    </main>
    
    <script is:inline>
      (function() {
        const KEY = "mcptoolshop_admin_nav";
        
        // Check for enable command
        if (typeof window !== "undefined") {
            const url = new URL(window.location.href);
            if (url.searchParams.get("admin") === "1") {
                localStorage.setItem(KEY, "1");
                url.searchParams.delete("admin");
                window.history.replaceState({}, "", url.toString());
            }
            
            // Toggle key chord
            window.addEventListener("keydown", (e) => {
                if (e.ctrlKey && e.shiftKey && (e.key === "L" || e.key === "l")) {
                    const current = localStorage.getItem(KEY);
                    if (current === "1") {
                        localStorage.removeItem(KEY);
                        alert("Lab mode disabled");
                    } else {
                        localStorage.setItem(KEY, "1");
                        alert("Lab mode enabled");
                    }
                    window.location.reload();
                }
            });
            
            // Render if enabled
            if (localStorage.getItem(KEY) === "1") {
                const el = document.getElementById("admin-nav-item");
                if (el) el.style.display = "block";
            }
        }
      })();
    </script>

    <footer class="site-footer">
      <div class="container">
        <div class="footer-top">
          <span>&copy; {new Date().getFullYear()} {kit.site.title || 'mcp-tool-shop'}</span>
          <ul class="footer-links">
            <li><a href={kit.org.url || 'https://github.com/mcp-tool-shop-org'}>Org on GitHub</a></li>
            <li><a href={`https://github.com/${kit.org.account || 'mcp-tool-shop'}`}>Profile</a></li>
            <li><a href="/trust/">Trust Center</a></li>
            <li><a href="/lab/">Labs <span class="footer-subtle">(proof &amp; metrics)</span></a></li>
          </ul>
        </div>
        <div class="footer-meta">
          {schemaLabel && <span>Registry schema {schemaLabel}</span>}
          {refLabel && <span>ref: {refLabel}</span>}
          {syncDate && <span>Last sync: {syncDate}</span>}
          {cleanupUrl && <a href={cleanupUrl} rel="noopener">Cleanup issue</a>}
        </div>
        <div class="footer-powered">
          Powered by <a href="https://www.npmjs.com/package/@mcptoolshop/promo-kit" rel="noopener">promo-kit</a>
          &mdash; receipt-backed promotions, open source
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
